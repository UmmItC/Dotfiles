// rofi configuration
configuration {
    modi:                        "dmenu";
    show-icons:                  true;
    drun-display-format:         "{icon} {name}";
    font:                        "Overpass Extra Bold Italic 14";
    click-to-exit:               true;
    display-drun:                "ïŒƒ ";
    disable-history:             false;
    location:                    0;
    icon-theme:                  "Papirus-Light";
}

// Global Properties
* {
    main-bg:                     rgba(25, 25, 35, 0.95);
    main-fg:                     #e8e3e3;
    select-bg:                   rgba(109, 75, 189, 0.6);
    select-fg:                   #ffffff;
    input-bg:                    rgba(35, 35, 45, 0.95);
    input-fg:                    #e8e3e3;
    input-border:                rgba(142, 89, 201, 0.8);
    accent-color:                #8E59C9;
    no-color-transparent:        rgba(0, 0, 0, 0);
    backdrop:                    rgba(0, 0, 0, 0.3);
}

// Window Styles
window {
    enabled:                     true;
    fullscreen:                  true;
    width:                       100%;
    height:                      100%;
    padding:                     10% 15%;
    border:                      0px;
    border-radius:               0px;
    border-color:                transparent;
    background-color:            @backdrop;
    transparency:                "real";
}

// Main Box
mainbox {
    enabled:                     true;
    children:                    ["inputbar", "listview"];
    spacing:                     80px;
    padding:                     0px;
    background-color:            @no-color-transparent;
}

// Input Bar
inputbar {
    enabled:                     true;
    spacing:                     10px;
    padding:                     15px;
    margin:                      0px 150px;
    border:                      2px solid;
    border-radius:               25px;
    border-color:                @input-border;
    background-color:            @input-bg;
    text-color:                  @input-fg;
    children:                    [ "prompt", "entry" ];
}

prompt {
    enabled:                     true;
    background-color:            transparent;
    text-color:                  @accent-color;
    font:                        "Overpass Extra Bold 14";
}

entry {
    enabled:                     true;
    background-color:            transparent;
    text-color:                  @input-fg;
    cursor:                      text;
    placeholder:                 "Search applications ...";
    placeholder-color:           rgba(232, 227, 227, 0.4);
    font:                        "Overpass Regular 14";
}

// Listview
listview {
    enabled:                     true;
    columns:                     4;
    lines:                       3;
    spacing:                     40px;
    padding:                     20px 50px;
    background-color:            @no-color-transparent;
    text-color:                  @main-fg;
    cycle:                       true;
    dynamic:                     false;
    scrollbar:                   false;
    fixed-height:                true;
    reverse:                     false;
}

// Elements
element {
    enabled:                     true;
    padding:                     25px;
    border-radius:               20px;
    background-color:            @no-color-transparent;
    text-color:                  @main-fg;
    cursor:                      pointer;
    orientation:                 vertical;
}

element normal.normal {
    background-color:            @no-color-transparent;
    text-color:                  @main-fg;
}

element selected.normal {
    background-color:            @select-bg;
    text-color:                  @select-fg;
    border:                      2px solid;
    border-color:                @accent-color;
}

element-icon {
    size:                        150px;
    border-radius:               15px;
    background-color:            transparent;
    margin:                      0px 0px 15px 0px;
}

element-text {
    vertical-align:              0.5;
    horizontal-align:            0.5;
    padding:                     8px 12px;
    background-color:            transparent;
    text-color:                  inherit;
    font:                        "Overpass Regular 13";
}

// Responsive design for different aspect ratios
@media(max-aspect-ratio: 1.6) {
    listview {
        columns:                 3;
        lines:                   4;
        spacing:                 35px;
    }
    
    inputbar {
        margin:                  0px 150px;
    }
    
    element-icon {
        size:                    100px;
    }
}

@media(max-aspect-ratio: 1.2) {
    listview {
        columns:                 3;
        lines:                   4;
        spacing:                 30px;
    }
    
    inputbar {
        margin:                  0px 100px;
    }
    
    element-icon {
        size:                    90px;
    }
}
